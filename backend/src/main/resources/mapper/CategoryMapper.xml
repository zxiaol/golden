<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.golden.mapper.CategoryMapper">
    <resultMap id="BaseResultMap" type="com.golden.entity.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="parent_id" property="parentId"/>
        <result column="sort_order" property="sortOrder"/>
        <result column="status" property="status"/>
    </resultMap>
    
    <select id="findAll" resultMap="BaseResultMap">
        SELECT * FROM categories WHERE status = 1 ORDER BY sort_order
    </select>
    
    <select id="findByParentId" resultMap="BaseResultMap">
        SELECT * FROM categories WHERE parent_id = #{parentId} AND status = 1 ORDER BY sort_order
    </select>
    
    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM categories WHERE id = #{id}
    </select>
</mapper>

